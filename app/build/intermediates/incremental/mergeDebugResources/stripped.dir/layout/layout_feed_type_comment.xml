<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                 
                       
                          

                 
                                 
                                                       

                                                           

                                                  

           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10" android:tag="layout/layout_feed_type_comment_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


        <include
            layout="@layout/layout_feed_author"
                                                ></include>

        <include
            layout="@layout/layout_feed_text"
                                                         
                            ></include>

        <com.mooc.libcommon.view.CornerLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginRight="@dimen/dimen_16"
            android:layout_marginBottom="@dimen/dimen_10"
            android:background="@color/color_gray2"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_16"
            app:clip_radius="6dp"
            app:clip_side="all">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:tag="binding_1"          
                android:textColor="@color/color_000"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"></TextView>

            <FrameLayout
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40">

                <com.mooc.ppjoke.view.PPImageView
                    android:id="@+id/icon_cover"
                    android:tag="binding_2"  
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:clip_radius="6dp"
                    app:clip_side="right"></com.mooc.ppjoke.view.PPImageView>

                <ImageView
                    android:id="@+id/icon_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/exo_icon_play"
                    android:tag="binding_3"                                                      ></ImageView>
            </FrameLayout>

        </com.mooc.libcommon.view.CornerLinearLayout>


        <include
            layout="@layout/layout_feed_tag"
                                              ></include>


        <include
            android:id="@+id/interaction_binding"
            layout="@layout/layout_profile_tab_comment_interaction"
                              
                                                  ></include>
    </LinearLayout>
         