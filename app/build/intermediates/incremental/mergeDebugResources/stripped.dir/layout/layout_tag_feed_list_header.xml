<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                          
                                                   

                                                  

                                                       

                                                                    

                 
                        
                                                       

                                                                        

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10" android:tag="layout/layout_tag_feed_list_header_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <com.mooc.ppjoke.view.PPImageView
            android:id="@+id/header_background"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:tag="binding_1"              
                                   
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"></com.mooc.ppjoke.view.PPImageView>


        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:tag="binding_2"        
            android:textColor="@color/color_000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_background"
            tools:text="神秘的jetpack"></TextView>

        <TextView
            android:id="@+id/header_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginRight="@dimen/dimen_16"
            android:tag="binding_3"                                                   
                                                                                       
            android:textColor="@color/color_theme"
            android:textSize="13sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_background"
            tools:text="@string/tag_follow"></TextView>

        <TextView
            android:id="@+id/header_intro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginTop="8dp"
            android:gravity="left|top"
            android:tag="binding_4"        
            android:textColor="@color/color_999"
            android:textSize="13sp"
                                                                                           
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/header_follow"
            app:layout_constraintTop_toBottomOf="@+id/header_title"
            tools:text="神秘的jetpack"></TextView>

        <TextView
            android:id="@+id/header_tag_watcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dp_10"
            android:tag="binding_5"                                             
            android:textColor="@color/color_999"
            android:textSize="13sp"
                                                                             
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_intro"
            tools:text="神秘的jetpack"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
         